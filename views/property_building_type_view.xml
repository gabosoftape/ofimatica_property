<odoo>
             <!-- tree property_building_type -->
        <record id="view_property_building_type_tree" model="ir.ui.view">
            <field name="name">Tipos de inmueble</field>
            <field name="model">property.building.type</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="codigo"/>
                    <field name="nombre"/>
                </tree>
            </field>
        </record>
         <record id="view_property_building_type_form" model="ir.ui.view">
            <field name="name">Tipo de Inmueble</field>
            <field name="model">property.building.type</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                            <field name="codigo"/>
                            <field name="nombre"/>
                            <field name="descripcion"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="action_property_building_type" model="ir.actions.act_window">
            <field name="name">Tipos de inmueble</field>
            <field name="res_model">property.building.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Tipos de Inmueble" id="menu_property_building_type" action="action_property_building_type" parent="base.menu_property_config"  sequence="2"/>
</odoo>