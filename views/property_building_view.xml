<?xml version="1.0" ?>
<odoo>
    <data>


        <record id="view_property_building_tree" model="ir.ui.view">
            <field name="name">Inmuebles</field>
            <field name="model">property.building</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="region_id"/>
                    <field name="owner_id"/>
                    <field name="asset_number"/>
                    <field name="city"/>
                    <field name="categ_id"/>
                    <field name="surface" sum="surface"/>
                </tree>
            </field>
        </record>

        <record id="view_property_building_form" model="ir.ui.view">
            <field name="name">Inmueble</field>
            <field name="model">property.building</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                            <button class="oe_stat_button" name="attachment_tree_view" type="object"
                                    icon="fa-files-o">
                                <field string="Documentos" name="doc_count" widget="statinfo"/>
                            </button>
                        </div>

                        <div class="oe_title oe_left">
                            <group>
                                <field name="foto" widget="image" height="300" width="300"/>
                                <label for="name" string="Nombre del Nuevo cliente"/>
                                <h1>
                                    <field name="name" placeholder="Nombre de Inmueble, o Casa .. Ej: CASA 32..."/>
                                </h1>
                            </group>
                        </div>
                        <group>
                            <group string="Identification">
                                <field name="admon_value"/>
                                <field name="type_prop"/>
                                <field name="administrator_id"/>
                            </group>

                            <group string="Ubicacion Interna">
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                </div>
                            </group>

                        </group>
                        <notebook>
                            <page string="Detalles">
                                <group string="Acerca de la propiedad">
                                    <field name="type_prop"/>
                                    <field name="purpose_prop"/>
                                    <field name="administrator_id"/>
                                    <field name="land_id"/>
                                    <field name="rented_room"/>
                                    <field name="tenant_id" attrs="{'invisible': [('rented_room', '=', False)]}"/>
                                    <field name="rent_domain" />
                                    <field name="admon_value" />
                                </group>
                                <group string="Detalles del inmueble">
                                    <field name="dormitorios" />
                                    <field name="baÃ±os" />
                                    <field name="balcones" />
                                    <field name="mobiliario" />
                                    <field name="aditional_room" />
                                    <field name="property_services" />
                                    <field name="society_services" />
                                </group>
                                <field name="note" class="oe_inline" placeholder="Note"/>
                                <div class="oe_clear"/>
                            </page>

                            <page string="Zonas Comunes">
                                <field name="room_ids">
                                    <tree editable="bootom">
                                        <field name="name"/>
                                        <field name="usage"/>
                                        <field name="surface" sum="surface"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Vehiculos">
                                
                            </page>
                            <page string="Mascotas">

                            </page>
                        </notebook>


                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread" placeholder="Escribe un mensaje..."/>
                    </div>
                </form>
            </field>
        </record>


        <record id="view_property_building_filter" model="ir.ui.view">
            <field name="name">Inmuebles</field>
            <field name="model">property.building</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search">


                    <field name="owner_id"/>
                    <field name="city"/>

                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>

                </search>
            </field>
        </record>


        <record id="action_property_building" model="ir.actions.act_window">
            <field name="name">Inmuebles</field>
            <field name="res_model">property.building</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

        <menuitem name="Inmuebles" id="menu_property_building"
                  action="action_property_building" parent="base.menu_property_info"/>


    </data>
</odoo>